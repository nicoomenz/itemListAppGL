<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="15dp"
    card_view:cardCornerRadius="15dp"
    app:cardBackgroundColor="@android:color/darker_gray">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2225"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleMain_activity2"
        android:layout_width="355dp"
        android:layout_height="113dp"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="titlaMain"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageMain_activity2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_activity2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:text="description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageMain_activity2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageMain_activity2"
        android:layout_width="190dp"
        android:layout_height="169dp"
        app:layout_constraintCircleRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/description_activity2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMain_activity2"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>